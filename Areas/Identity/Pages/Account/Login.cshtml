@page
@model LoginModel

@{
    ViewData["Title"] = "Ingreso";
}
<div class="fUser">
    <h1><i class="bx bxs-user"></i>@ViewData["Title"]</h1>
        <hr />
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="Input_Email">Usuario o Email</label>
            <input asp-for="Input.Email" id="Input_Email" class="form-control" autocomplete="Email" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputPassword">Contraseña</label>
            <input asp-for="Input.Password" class="form-control" id="inputPassword" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Input_RememberMe"></label>
                <input class="form-check-input" id="Input_RememberMe" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            
        </div>
        <div class="btn-login">
            <hr>
            <button id="login-submit" class="btn btn-success" type="submit">Ingresar</button>
        </div>
    </form>
    <hr>
    @* <p class="note"><a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a></p> *@
    <p class="note"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a></p>
@*     <p class="note"><a asp-page="./ResendEmailConfirmation">Reenviar confirmación por correo electrónico</a></p> *@
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
