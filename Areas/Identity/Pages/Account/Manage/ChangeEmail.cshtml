@page
@model ChangeEmailModel
@{
    ViewData["Title"] = "Cambiar Correo Electrónico";
    ViewData["ActivePage"] = ManageNavPages.ChangeEmail;
}
<!-- Tarjeta (div) que contiene la información -->
<div class="fUser me-auto ms-0">
    <h3>@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <form id="change-email-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <div class="form-group">
            <label for="Email">Correo Electrónico Actual</label>
            <input asp-for="Input.Email" class="form-control" aria-disabled="true" disabled />
        </div> *@
        <div class="form-group">
            <label for="inputNewEmail">Nuevo Correo Electrónico</label>
            <input asp-for="Input.NewEmail" class="form-control" aria-required="true" id="inputNewEmail" />
            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputPassword">Contraseña</label>
            <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" id="inputPassword" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Actualizar Correo Electrónico</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#ChangeEmail").addClass("active");
    </script>
}
