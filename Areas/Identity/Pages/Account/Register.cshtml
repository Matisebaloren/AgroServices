@page
@model RegisterModel2

@{
    ViewData["Title"] = "Registro";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f3f3f3;
    }

    .container-form {
        margin: 0 auto;
        padding: 20px;
        border-radius: 6px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #47a847;
        text-align: center;
        margin-bottom: 20px;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #47a847;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        color: #6b8e23;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #d7fda6;
        border-radius: 4px;
        background-color: #d7eab5;
        color: #555;
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        font-weight: bold;
        color: #fff;
        background-color: #47a847;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #3d8d3d;
    }

    .note {
        text-align: center;
        color: #888;
    }

    .back-link {
        display: block;
        text-align: center;
        color: #47a847;
        text-decoration: none;
        margin-top: 10px;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<div class="container-form col-12 col-md-10">
        <h1><i class="bx bxs-user-plus"></i>@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-12 col-md-6">
                    <label for="inputEmail">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="inputUserName">Nombre de usuario</label>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
            @*  <div class="form-group">
                    <label for="inputPhoneNumber">Número de teléfono</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="PhoneNumber" aria-required="true" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div> *@
                <div class="form-group col-12 col-md-6">
                    <label for="inputPassword">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="inputConfirmPassword">Confirmar contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="selectProvincias">Provincias</label>
                    <select name="Provincias" class="form-control" id="ProvinciaID" aria-required="true" onchange=CambiarProvincia(this.value)>
                        <option value="0">Elija una provincia</option>
                    </select>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="selectLocalidad">Localidad</label>
                    <select id="LocalidadID" asp-for="Input.LocalidadID" class="form-control" aria-required="true" autocomplete="new-password" aria-required="true"></select>
                    <span asp-validation-for="Input.LocalidadID" class="text-danger"></span>
                </div>

            </div>
            <hr>
            <button id="registerSubmit" class="btn btn-primary" type="submit">Registrarse</button>
        </form>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login-1.0.0.js"></script>
}
