@{
    ViewData["Title"] = "Servicios";
}


<body class="body6"> 
  <!-- Modal -->
<div class="modal fade" id="ModalServicio" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Servicio</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="ServicoID" value="0" />
        <div>
            <label class="control-label">Servicio</label>
            <input type="text" class="form-control" id="Descripcion" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>
        </div>
        <div>
          <label class="control-label">Telefono</label>
          <input type="text" class="form-control" id="Telefono" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>
        </div>
         <div>
          <label class="control-label">Direcion</label>
          <input type="text" class="form-control" id="Direcion" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>
        </div>
        <div>
          <label class="control-label">
            SubCategoria
          </label>
          @Html.DropDownList("SubCategoriaID", null, htmlAttributes: new {@class="form-control"})
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" onclick="GuardarServicio()" class="btn btn-primary">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>


<div>
    <h1 class="display-4">Servicio</h1>


       @{if (User.Identity.IsAuthenticated){
     
      <div class="mb-2">
        <button type="button" onclick="VaciarFormulario()" class="btn btn-primary boton2" data-bs-toggle="modal" data-bs-target="#ModalServicio">
            Nuevo
        </button>
      </div>
    } 
    else{
    }
    }
    
      

 
  <table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>Descripcion</th>
            <th>telefono</th>
            <th>Direcion</th>
        </tr>
      
    </thead>
        <tbody id="tbody-servicios">        
        </tbody>
  </table>
</div>

</body>

@section Scripts{
    <script src="~/js/servicios-1.0.0.js"></script>
}