@{

    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/publicacionList.css" />
<!-- Modal -->

<input type="hidden" value="@ViewBag.Id" id="ServicioID" />
<div class="modal fade" id="ModalPublicacion" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content fondo2">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal">Agregar Publicacion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="PublicacionID" value="0" />
        <div>
            <label class="control-label">Publicacion</label>
            <input type="text" class="form-control" id="Descripcion" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>
            <p class="text-danger" id="alerta"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" onclick="GuardarPublicacion()" class="btn btn-primary">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>


<div class="card-blanco mx-auto">
  <div class="card-header">Publicaciones</div>
  <div id="tbody-publicaciones">
  </div>
  <div id="paginationContainer" class="row">
    <div id="pagination" class="col-12 col-md-6">
    </div>
    
    <div id="paginationInfo" class="col-12 col-md-6">
      <p id="paginationText"></p>
      <label for="selectElementosPorPagina">Mostrar por p√°gina:</label>
      <select id="selectElementosPorPagina" onchange="PublicacionesPorPagina(this.value)">
        <!-- ...opciones... -->
        <option value="10">10</option>
        <option value="20">20</option>
        <option value="30">30</option>
      </select>
    </div>
  </div>
</div>

@section Scripts{
    <script src="~/js/tablas/buscador-1.0.0.js"></script>
    <script src="~/js/estrellas.js"></script>
}