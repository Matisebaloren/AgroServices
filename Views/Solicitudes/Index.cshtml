

@{
    ViewData["Title"] = "Home Page";
}
@model List<Solicitud>
  <div id="solicitudesData" data-solicitudes="@Html.Raw(Json.Serialize(Model))"></div>
<link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />

<div class="FondoGlass-1 my-5">
  <h1 class="display-4">Solicitudes</h1>
  <select id="FiltroTipo">
    <option value="0">Todas</option>
    <option value="1">Entrada</option>
    <option value="2">Salidas</option>
  </select>
  <select id="FiltroVisto">
    <option value="0">Todas</option>
    <option value="1">Sin ver</option>
    <option value="2">Vistas</option>
  </select>
  @* Tabla con los datos de cada elemento *@
  <table class="table table-hover">
    <thead class="table-dark">
        <tr>
          <th class="th-icon"></th>
          <th>Descripcion</th>
          <th>Fecha</th>
        </tr>
    </thead>
    <tbody id="tablaSolicitudes">
       
    </tbody>
</table>
</div>

@section Scripts{
    <script src="~/js/tablas/solicitud-1.0.0.js"></script>
}