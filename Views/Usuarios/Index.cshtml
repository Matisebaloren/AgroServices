@model AgroServices.Models.Usuario

@{

    ViewData["Title"] = "Home Page";
}


<!-- Modal -->
<div class="modal fade" id="ModalLocalidad" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content fondo2">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal">Agregar Localidad</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="UsuarioID" value="0" />
        <div>
            <label class="control-label">Nombre</label>
            <input type="text" class="form-control" id="Nombre" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>
            
            <label class="control-label">Apellido</label>
            <input type="text" class="form-control" id="Apellido" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>

            @* <label class="control-label">Email</label>
            <input type="email" class="form-control" id="Email" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/> *@

            <label class="control-label">Telefono</label>
            <input type="tel" class="form-control" id="Telefono" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>

            <label class="control-label">Localidad</label>
            <select asp-for="LocalidadID" class ="form-control" id="LocalidadID" asp-items="ViewBag.LocalidadID"></select>
            
            <p class="text-danger" id="alerta"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" onclick="GuardarLocalidad()" class="btn btn-primary">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>




<div class="fondoTablas">
    <h1 class="display-4">Usuario</h1>

      <!-- Button trigger modal -->
      

  @* Tabla con los datos de cada elemento *@
 
  <table class="table table-bordered table-hover table-light table-condensed text-uppercase">
    <thead>
        <tr>
            <th>Nombre</th>
            <th class="text-end">
              <button type="button" onclick="VaciarFormulario()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalProvincia">
              Nuevo</button>
            </th>
        </tr>
    </thead>
        <tbody id="tbody-usuarios">        
        </tbody>
  </table>
</div>