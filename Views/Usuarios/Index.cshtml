@model AgroServices.Models.Usuario

@{

  ViewData["Title"] = "Home Page";
}


<!-- Modal -->
<div class="modal fade" id="ModalUsuario" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content FondoGlass-2">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal">Agregar Usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="UsuarioID" value="0" />
        <div>
          <label class="control-label">Nombre</label>
          <input type="text" class="form-control" id="Nombre" autocomplete="off"
            onkeyup="this.value = this.value.toUpperCase()" />

          <label class="control-label">Apellido</label>
          <input type="text" class="form-control" id="Apellido" autocomplete="off"
            onkeyup="this.value = this.value.toUpperCase()" />

          @* <label class="control-label">Email</label>
          <input type="email" class="form-control" id="Email" autocomplete="off" onkeyup="this.value =
          this.value.toUpperCase()"/> *@

          @* <label class="control-label">Telefono</label>
          <input type="tel" class="form-control" id="Telefono" autocomplete="off" onkeyup="this.value =
          this.value.toUpperCase()"/> *@

          <label class="control-label">Localidad</label>
          <select asp-for="LocalidadID" class="form-control" id="LocalidadID" asp-items="ViewBag.LocalidadID"></select>

          <p class="text-danger" id="alerta"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" onclick="GuardarUsuario()" class="btn btn-primary">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>




<div class="fondoTablas">


  <!-- Button trigger modal -->


  @* Tabla con los datos de cada elemento *@
<div class="FondoGlass-1 my-5">
<h2>Usuarios</h2>
  <table class="table table__body">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Provincia</th>
        <th>Localidad</th>
        <th class="text-end">
          <button type="button" onclick="VaciarFormulario()" class="btn btn-primary" data-bs-toggle="modal"
            data-bs-target="#ModalUsuario">Nuevo
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-plus-square-fill" viewBox="0 0 16 16">
              <path
                d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z" />
            </svg>
            </button>
        </th>
      </tr>
    </thead>
    <tbody id="tbody-usuarios">
    </tbody>
  </table>
</div>
  
</div>


@section Scripts{
  <script src="~/js/tablas/usuario-1.0.0.js"></script>
}