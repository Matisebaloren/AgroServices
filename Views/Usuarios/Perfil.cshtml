@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
  ViewData["Title"] = "Home Page";
}

  <link rel="stylesheet" href="~/css/perfil.css" asp-append-version="true" />


<div>
  <!-- Card 1 - Información del Usuario -->
  <div class="card-perfil">
    <div class="card-header">Información de la Cuenta <i class="bx bx-show" title="Información Publica"></i></div>
    <div class="row">
      <div class="user-info col-12 col-md-6">
        <div class="div-select">
          <a href="../../Identity/Account/manage" class="nav_link sublink" class="btn-info-perfil"><strong>Nombre de usuario: </strong>@ViewBag.UserName</a>
        </div>
        <p>@ViewBag.Age siendo parte de AgroServices</p>
        <p><strong>Localidad: </strong>@ViewBag.Ubication</p>
      </div>
      <div class="user-info col-12 col-md-6">
        <p><strong>Valoracion Promedio:</strong></p>
      </div>
    </div>
  </div>

  <div class="card-perfil">
    <div class="card-header">Información del Usuario <i class="bx bx-hide" title="informacion Privada"></i></div>
    <div class="row">
      <div class="user-info col-6">
        <p><strong>Nombre Completo: </strong>@ViewBag.PersonalName</p>
        <p><strong>Telefono: </strong>@ViewBag.PhoneNumber</p>
        <p><strong>Email: </strong>@ViewBag.Email</p>
      </div>
      <div class="user-info col-6">
        
      </div>
    </div>
  </div>

  <!-- Card 2 - Lista de publicaciones asociadas a la cuenta -->
  <div class="card-perfil">
    <div class="card-header">Publicaciones Relacionadas</div>
    <div class="user-photo">
      <p><center>La cuenta no poseé ninguna publicación disponible.</center></p>
    </div>
  </div>

  <!-- Card 3 - Otra información del Usuario -->
  <div class="card-perfil">
    <div class="card-header">Contactar</div>
    <div class="user-details">
      <!-- Aquí puedes mostrar otra información del usuario, por ejemplo: -->
      <label for="">Consultar Sobre:</label>
      <select name="" id=""></select>

<button>buton</button>
      <!-- Puedes añadir más detalles aquí -->
    </div>
  </div>
</div>

@section Scripts{
      <script src="~/js/tablas/perfil-1.0.0.js"></script>
} 
